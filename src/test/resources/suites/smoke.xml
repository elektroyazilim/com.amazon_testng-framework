    </test>

    <test name="CSV Tests ">
        <classes>
            <class name="amazon.tests.ExcelDataCsvTest"></class>
        </classes>
    </test>

    <test name="SearchPage tests 2">
        <classes>
            <class name="amazon.tests.US002_ProductSearchTest2"></class>
            <class name="amazon.tests.US003_ProductSearchFilterTest2"></class>
            <class name="amazon.tests.US004_PaginationTest2"></class>
        </classes>
    </test>

</suite>

